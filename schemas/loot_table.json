{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "min_max_int": {
            "type": "object",
            "properties": {
                "min": {
                    "type": "integer"
                },
                "max": {
                    "type": "integer"
                }
            }
        },
        "min_max_num": {
            "type": "object",
            "properties": {
                "min": {
                    "type": "number"
                },
                "max": {
                    "type": "number"
                }
            }
        }
    },
    "title": "Loot_table",
    "description": "Loot table file format.",
    "type": "object",
    "properties": {
        "pools": {
            "type": "array",
            "items": {
                "id": "loot_table_pool",
                "type": "object",
                "properties": {
                    "conditions": {
                        "type": "array"
                    },
                    "rolls": {
                        "oneOf": [
                            {
                                "type": "integer"
                            },
                            {
                                "$ref": "#/definitions/min_max_int"
                            }
                        ]
                    },
                    "bonus_rolls": {
                        "oneOf": [
                            {
                                "type": "number"
                            },
                            {
                                "$ref":"#/definitions/min_max_num"
                            }
                        ]
                    },
                    "entries": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string",
                                    "enum": [
                                        "item",
                                        "loot_table",
                                        "empty"
                                    ]
                                },
                                "weight": {
                                    "type": "integer"
                                },
                                "quality": {
                                    "type": "integer"
                                },
                                "conditions": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "condition": {
                                                "type": "string",
                                                "enum": [
                                                    "entity_properties",
                                                    "entity_scores",
                                                    "killed_by_player",
                                                    "random_chance",
                                                    "random_chance_with_looting"
                                                ]
                                            },
                                            "entity": {
                                                "type": "string",
                                                "enum": [
                                                    "this",
                                                    "killer",
                                                    "killer_player"
                                                ]
                                            },
                                            "properties": {
                                                "type": "object",
                                                "properties": {
                                                    "on_fire": {
                                                        "type": "boolean"
                                                    }
                                                }
                                            },
                                            "scores": {
                                                "type": "object",
                                                "additionalProperties": {
                                                    "oneOf": [
                                                        {
                                                            "type": "integer"
                                                        },
                                                        {
                                                            "$ref": "#/definitions/min_max_int"
                                                        }
                                                    ]
                                                }
                                            },
                                            "inverse":{"type": "boolean"},
                                            "chance":{"type": "number"},
                                            "looting_multiplier":{"type": "number"}
                                        }
                                    }
                                },
                                "functions": {
                                    "type": "array",
                                    "items": {
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}